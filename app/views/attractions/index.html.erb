<% @attractions.each do |attraction| %>
    <div class="row">
        <div class="column" >
            <p><%= attraction.name %></p>
        </div>
        <div class="column">
            <p><%= attraction.tickets %></p>
        </div>
        <div class="column">
            <% if current_user.admin != true %>
                <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
            <% else %>
                <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
            <% end %>
        </div>
    </div>
<% end %>



